{
  "tasks": {
    "dev": "deno run --allow-net --allow-read --watch src/main.ts",
    "start": "deno run --allow-net --allow-read src/main.ts",
    "test": "deno test --allow-net --allow-read"
  },
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "lib": ["deno.window"]
  },
  "imports": {
    "@/": "./src/"
  },
  "fmt": {
    "options": {
      "lineWidth": 100,
      "indentWidth": 2,
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  }
}