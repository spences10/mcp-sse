{
  "tasks": {
    "dev": "deno run --allow-net --allow-read --allow-run --allow-env --watch src/main.ts",
    "start": "deno run --allow-net --allow-read --allow-run --allow-env src/main.ts",
    "test": "deno test --allow-net --allow-read --allow-run --allow-env"
  },
  "compilerOptions": {
    "strict": true,
    "lib": [
      "deno.ns",
      "dom"
    ]
  },
  "imports": {
    "@/": "./src/",
    "@Web/": "https://deno.land/std@0.220.0/"
  },
  "fmt": {
    "options": {
      "lineWidth": 100,
      "indentWidth": 2,
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  }
}